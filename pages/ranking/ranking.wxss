.header {
  position: relative;
  height: 80px; /* 根据需要调整高度 */
  background: linear-gradient(120deg, #6699ff 0%, #ff6699 100%);
}

.header-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 20px;
  z-index: 1;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 15px 15px;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 10px;
  /* background-color: #f0f0f0; */
}

.search-input-container {
  position: relative;
  flex: 1;
}

.search-input {
  width: 100%;
  padding: 8px 35px 8px 10px; /* 右侧留出足够空间给清空按钮 */
  border: 1px solid #ccc;
  border-radius: 15px 0 0 15px;
  font-size: 14px;
  height: 40px;
  box-sizing: border-box;
}

.search-button {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  height: 40px;
  padding: 0px 16px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 0 15px 15px 0;
  cursor: pointer;
}

.search-button:active {
  background-color: #0056b3;
}

.search-actions {
  display: flex;
  align-items: center;
}

.clear-button {
  position: absolute;
  right: 8px;
  top: 50%;
  transform: translateY(-50%);
  width: 18px;
  height: 18px;
  padding: 0;
  border-radius: 50%;
  border: none;
  background-color: #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

.clear-text {
  font-size: 14px;
  color: #fff;
  font-weight: bold;
  line-height: 1;
  transform: translateY(-1px); /* 向上偏移1px，可根据实际调整0.5~1px */
}

.search-button image {
  width: 20px;
  height: 20px;
}

.tab-bar {
  display: flex;
  align-items: center;
  width: 100%;
}

.scroll-container {
  /* display: flex; */
  overflow-x: auto;
  white-space: nowrap;
  flex: 1;
}

.tab-row {
  display: flex;
  flex-wrap: nowrap;
}

.tab-item {
  padding: 5px;
  /* border: 1px solid #ccc; */
  border-radius: 5px;
  cursor: pointer;
  font-size: 13px;
  flex: 1 0 auto;
  text-align: center;
  margin: 0 3px;
  white-space: nowrap;
}

.tab-item.active {
  /* background-color: #1296db;
  color: white; */
  color: #0056b3;
  font-weight: bold;
}

.divider {
  width: 1px;
  height: 20px;
  background-color: #ccc;
  margin: 0 10px;
}

.batch-button {
  font-size: 12px;
  line-height: 26px;
  padding: 0 10px;
  border: none;
  background: linear-gradient(135deg, #f6d365, #fda085);
  color: white;
  border-radius: 5px;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.batch-icon {
  width: 8px; /* 根据需要调整 */
  height: 8px; /* 根据需要调整 */
  margin-left: 3px; /* 根据需要调整 */
}

.batch-button:active {
  background: linear-gradient(135deg, #f4b235, #fb7c51); /* 按钮被按下时的背景色 */
  transform: scale(0.95); /* 按钮被按下时的缩放效果 */
}

.batch-actions {
  display: flex;
  justify-content: flex-start;
  margin: 3px 0 8px 0; 
}

.batch_selection_button {
  margin-right: 8px;
  font-size: 12px;
  line-height: 30px;
  padding: 0 8px;
  border: none;
  color: grey;
  border-radius: 5px;
  font-weight: bold;
  flex: 1 0 auto;
}

.batch_selection_button:active {
  transform: scale(0.95); /* 按钮被按下时的缩放效果 */
}

.batch_selection_button:last-child {  
  margin-right: 0px;  
}

.batch-action-button {
  margin-right: 8px;
  font-size: 12px;
  line-height: 30px;
  padding: 0 8px;
  border: none;
  background: linear-gradient(135deg, #ff9a9e, #fad0c4);
  color: white;
  border-radius: 5px;
  font-weight: bold;
  flex: 1 0 auto;
}

.batch-action-button:active {
  background: linear-gradient(135deg, #ff6b6e, #f6a086); /* 按钮被按下时的背景色 */
  transform: scale(0.95); /* 按钮被按下时的缩放效果 */
}

.batch-action-button:last-child {  
  margin-right: 0px;  
}

.search-history {
  width: 100%;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 3px;
}

.history-list {
  display: flex;
  flex-direction: column;
  margin-top: 15px;
}

.history-item {
  display: flex;
  height: 80px;
  margin-bottom: 10px;
  padding: 10px;
  /* background-color: #f5f5f5; */
  background-color: #e6f7ff;
  background-image: linear-gradient(45deg, rgba(255, 255, 255, 0.2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0.2) 75%, transparent 75%, transparent); /* 斜线底纹 */
  background-size: 10px 10px; /* 控制底纹密度 */
  border-radius: 5px;
}

.video-item {
  position: relative;
  margin-bottom: 10px;
}

.checkbox-container {
  position: absolute;
  top: 8px;
  left: 8px;
  z-index: 1; /* 确保选择框在视频内容之上 */
}

.cover-container {
  position: relative;
  display: inline-block;
}

.cover-image {
  width: 80px;
  height: 80px;
  border-radius: 5px;
  margin-right: 10px;
  display: block;
}

.cover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 80px;
  height: 80px;
  border-radius: 5px;
  background-color: rgba(0, 0, 0, 0.3); /* 黑色透明度遮罩 */
}

.play-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-55%, -50%);
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 15px 0 15px 25px; /* 调整边框宽度 */
  border-radius: 5px;
  border-color: transparent transparent transparent rgba(255, 255, 255, 0.8);
  z-index: 1;
}

.play-icon {
  width: 30px;
  height: 30px;
  filter: invert(1);
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title-container {
  display: flex;
  align-items: flex-start; /* 顶部对齐 */
  margin-bottom: 3px;
}

.platform-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, #ff7e5f, #feb47b);
  border-radius: 4px;
  padding: 2px 4px;
  margin-right: 5px;
  font-size: 12px;
  flex-shrink: 0; /* 防止压缩 */
}

.platform-text {
  font-size: 10px;
  color: #fff; /* 修改文字颜色为白色以提高对比度 */
}

.title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;  /* 显示三行 */
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 12px;
  color: #333;
  flex: 1;
  padding: 0 10px 0 0;
}

.copy-button {
  width: 15px; /* 图片宽度 */
  height: 15px; /* 图片高度 */
  margin: 4px 2px; /* 外边距 */
  cursor: pointer; /* 鼠标指针样式 */
  padding: 8px;
  margin-top: 10px; /* 调整复制按钮向下移动 */
}

.actions {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  flex: 1;
}

.refresh-button{
  background-color: white; 
  border: none;
  color:#1296db;
  padding: 5px 10px;
  text-align: center;
  text-decoration: none; 
  display: inline-block; 
  font-size: 12px;
  line-height: 12px;
  margin: 0 3px; 
  cursor: pointer; 
  border-radius: 10px;
  transition: background-color 0.3s, color 0.3s;   
}

.refresh-button:active {
  background-color: #1296db;
  color: white;
}

.refresh-button:last-child {
  margin-right: 12px;
}

.action-button {
  background-color: #1296db; 
  border: none;
  color: white;
  padding: 5px 10px;
  text-align: center;
  text-decoration: none; 
  display: inline-block; 
  font-size: 12px;
  line-height: 12px;
  margin: 0 3px; 
  cursor: pointer; 
  border-radius: 10px;
  transition: background-color 0.3s, color 0.3s; 
}

.action-button:active {
  background-color: #a6c0fe;
  color: white;
}

.action-button:last-child {
  margin-right: 12px;
}

.query-count {
  margin-right: 10px;
  font-size: 14px;
  font-weight: bold;
  color: #f74e48;
  margin-top: auto; /* 确保对齐到底部 */
}

.index-label {
  position: absolute;
  top: 5px;
  right: 10px;
  color: #666;
  display: flex;
  align-items: center;
}

.index-text {
  font-size: 18px; /* 放大字号，可按需调整（如18/30px） */
  font-style: italic;
  opacity: 0.1; /* 透明值：0=完全透明，1=不透明，0.3是柔和的半透明 */
  margin: 0;
  line-height: 1;
}
